{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "web3-actions"
    ],
    "extends": "@tsconfig/recommended/tsconfig.json",
    "files": [
        "hardhat.config.ts"
    ],
    "include": [
        "hardhat",
        "deploy",
        "scripts",
        "src",
        "test",
        "typechain",
        "web3-functions"
    ]
}